<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="4"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:src="@drawable/photo" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="100dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:textSize="20dp"
        android:layout_margin="10dp"
        android:fontFamily="sans-serif-condensed"
        android:layout_gravity="center"
        android:textAlignment="gravity"
        android:text="Ladies and Gentlemen, I am Rishabh Jain, and I am thrilled to be here today. I am a person with diverse interests and passions. I am an enthusiastic sports fan, particularly of cricket and badminton, and I also enjoy playing chess. Music and calligraphy are my artistic pursuits that allow me to showcase my creative side. I am driven and dedicated to my goals and always striving for excellence. It is my pleasure to share a little about myself with you all." />

    </ScrollView>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:src="@drawable/photo" />


</LinearLayout>